{
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "build:sdk": "pnpm --filter @youbetdao/pg-boss-sdk build",
    "test": "pnpm -r test",
    "test:sdk": "pnpm --filter @youbetdao/pg-boss-sdk test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "pnpm -r format",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "dev": "pnpm --filter @youbetdao/pg-boss-sdk build --watch",
    "publish:sdk": "pnpm --filter @youbetdao/pg-boss-sdk publish"
  },
  "devDependencies": {
    "@types/node": "^20.19.1",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}